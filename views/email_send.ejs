     <form id="textForm">
	<div class="form-group">
	<div class="col-sm-10">
	<select id="email_template" class="form-control" onchange="get_emailbody(this.value)">
	<option value="">-SELECT TEMPLATE-</option>
		  <% if (rows && rows.length) {%>
	    
			<% rows.forEach(row => { %>
				<option value="<%= row.id %>"><%= row.email_type %></option>
			 <% }); 
		}
		%>
    </select>
    </div>
    </div>
    <input type="hidden" name="clientIDmail" id="clientIDmail" />
    <div class="form-group">
    <div class="col-sm-10"><input type="text" name="to" id="to" placeholder="To" class="form-control text ui-widget-content ui-corner-all" value=""/></div>
    </div>
    <div class="form-group">
    <div class="col-sm-10"><input type="text" name="subject" id="subject" placeholder="Subject" class="form-control text ui-widget-content ui-corner-all" /></div>
    </div>
    <div class="form-group">                                                         
    <div class="col-sm-10"><textarea id="message" name="message" rows="3" cols="61" style="width: 65%"></textarea></div>
    </div>
	<div id="alert_email"></div>	
	<div class="form-group">  
        <input type="button" id="Email_send" value="Email Send" onclick="send_email();"/>   
	</div>
    </fieldset>
