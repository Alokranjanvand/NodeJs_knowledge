
<div class="container">
    <% if (image_arr.length > 0) { %>
    <div style="font-size:15px; font-weight:bold;" class="mb-3">Image</div>
    <hr>
    <div class="row">
        <% image_arr.forEach(image => { %>
        <div class="col-md-6" style="margin-bottom:20px;">
            <div class="thumbnail" style="border: 1px solid #ddd; padding: 4px; text-align:center;">
                <% if (image.image_path) { %>
                <img src="<%= decision_tree_baseurl %><%= image.image_path %>" alt="<%= image.title %>" style="width:100%; height:150px;" data-toggle="modal" data-target="#imgModal<%= image.id %>">
                <% } %>
                <p><%= image.title %></p>
            </div>
        </div>

        <!-- Modal for Image -->
        <div class="modal fade" id="imgModal<%= image.id %>" tabindex="-1">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4><%= image.title %></h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    
                    <div class="modal-body" style="height:450px; overflow:auto">
                      <center><img src="<%= decision_tree_baseurl %><%= image.image_path %>" alt="<%= image.id %>" id="img_<%= image.id %>" style="width:450px; height:405px"> </center>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary"  onclick="enlargeImg('img_<%= image.id %>')" style="font-weight:800">+</button>
                  <button type="button" class="btn btn-primary"  onclick="shortImg('img_<%= image.id %>')" style="font-weight:800">-</button>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
    <% } %>

    <% if (video_arr.length > 0) { %>
    <div style="font-size:15px; font-weight:bold;" class="mb-3">Video</div>
    <hr>
    <div class="row">
        <% video_arr.forEach(video => { %>
        <div class="col-md-6" style="margin-bottom:20px;">
            <video style="width:100%; height:125px;" controls>
                <source src="<%= decision_tree_baseurl %><%= video.video_path %>" type="video/mp4">
            </video>
            <p><%= video.title %></p>
        </div>
        <% }) %>
    </div>
    <% } %>

    <% if (docs_arr.length > 0) { %>
    <div style="font-size:15px; font-weight:bold;" class="mb-3">Document</div>
    <hr>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Title</th>
            <th>Document</th>
        </tr>
        </thead>
        <tbody>
        <% docs_arr.forEach(doc => { %>
        <tr>
            <td><%= doc.title %></td>
            <td><a href="<%= decision_tree_baseurl %><%= doc.doc_path %>" download>Download</a></td>
        </tr>
        <% }) %>
        </tbody>
    </table>
    <% } %>

    <% if (hyperlink_arr.length > 0) { %>
    <div style="font-size:15px; font-weight:bold;" class="mb-3">Hyperlink</div>
    <hr>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Link</th>
        </tr>
      </thead>
      <tbody>
        <% hyperlink_arr.forEach(link => { %>
        <tr>
          <td><%= link.title %></td>
          <td><a href="<%= link.hyperlink_path %>" target="_blank"><%= link.hyperlink_path %></a></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>

    <% if (text_arr.length > 0) { %>
    <div style="font-size:15px; font-weight:bold;" class="mb-3">Description</div>
    <hr>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        <% text_arr.forEach(text => { %>
        <tr>
          <td><%- text.title %></td>
          <td><%- text.long_text %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    
    <% } %>

</div>
<script>
  function enlargeImg(img1) {
img = document.getElementById(img1);
var wt = img.style.width.replace('px','');
var ht = img.style.width.replace('px','');
var width=parseInt(wt)+100;
var height=parseInt(ht)+25;
      img.style.width = width+'px';
      img.style.height = height+'px';
      img.style.transition = "width 0.5s ease";
  }
  // Function to reset image dimensions
  function shortImg(img1) {
      img = document.getElementById(img1);
var wt = img.style.width.replace('px','');
var ht = img.style.width.replace('px','');
var width=parseInt(wt)-100;
var height=parseInt(ht)-25;
      img.style.width = width+'px';
      img.style.height = height+'px';
      img.style.transition = "width 0.5s ease";
  }

</script>
